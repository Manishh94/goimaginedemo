<style>
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}

tr:nth-child(even) {
  background-color: #dddddd;
}
</style>
<h2>All Products</h2>
<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Vendor</th>
    <th>Shipping</th>
    <th>Shipping Price </th>
    <th>Edit action</th>
    <th>Delete action</th>
    <th>Add to cart</th>
  </tr>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= number_to_currency(product.price) %></td>
      <td><%= product.vendor.name %> </td>
      <td><%= product.vendor.shipping_name %> </td>
      <td><%= product.vendor.shipping_price %> </td>
      <td><%= link_to "Edit", edit_product_path(product) %></td>
      <td><%= button_to 'Delete', product_path(product), method: :delete %></td>
      <td><%= button_to "Add #{product.name} to cart", line_items_path(:product_id => product.id) %></td>
    </tr>
  <% end%>
</table>
<br>
<%= link_to "New product", new_product_path %>
